mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src="/"+video.src, autoplay)
        .videoPlayer__controls
            input#jsVideoTime(type="range", name="time", min="0", max="100", step="1", value="0")
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-pause
                span#jsVolumeButton
                    i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range", name="volume", min="0", max="1", step="0.05", value="1")
            .videoPlayer__column
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand