extends layout/main
include mixins/videoPlayer

block content
    .video-detail__container
        +videoPlayer({
            src:video.fileUrl
        })
        //- .video__player
        //-     video(src='../'+video.fileUrl, controls=true)
        .video__info
            if video.creator.id === loggedUser.id
                button.small 
                    a(href=routes.editVideo(video.id)) Edit Video
            .video__title=video.title
            .video__author
                | Uploaded by 
                a(href=routes.userDetail(video.creator.id))=video.creator.name
            .video__views #{video.views} views
            .video__description=video.description
        .video__comment
            if video.comments.length === 1 
                span.video__comment-number 1 comment
            else
                span.video__comment-number #{video.comments.length} comments
