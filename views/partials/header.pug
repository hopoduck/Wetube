header.header
    .header__wrap
        .header__column
            a(href=routes.home)
                i.fab.fa-youtube
                span Wetube
        .header__column
            form(action=routes.search, methode='get')
                input(type="text", name="term", placeholder="Search by term...")
        .header__column
            ul  
                if !user
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Login
                else
                    li
                        a(href=`${routes.videos}${routes.upload}`) Upload
                    li
                        a(href=routes.userDetail(user.id)) Profile
                    li
                        a(href=routes.logout) LogOut